<section class="colors">
  {{#each colors}}
    {{#each this as |shades name|}}
      <div class="colors__item">
        <h3 class="colors__item-title">{{name}}</h3>
        <ol class="colors__list">
        {{#each shades}}
          {{#each this as |sass-fn color-class|}}
            <li class="colors__color">
              <div class="colors__sample {{color-class}}"></div>
              <code>{{sass-fn}}</code>
            </li>
          {{/each}}
        {{/each}}
        </ol>
      </div>
    {{/each}}
  {{/each}}
</section>
