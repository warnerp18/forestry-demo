{{#unless alignment-eg}}
  <div class="icons__item {{#if cutout-eg}}u-theme-accent{{/if}}">
    <p class="icon__title-copy">
      {{#if icon-example}}
        #{{id}}
      {{else if modifier-class}}
        {{modifier-class}}
      {{else}}
        default
      {{/if}}
    </p>
    <svg class="svg-icon {{#if modifier-class}}{{modifier-class}}{{/if}}">
      <title>{{id}}</title>
      <use xlink:href="/m2dm-public/assets/icons/svg-sprite.svg#{{id}}"></use>
    </svg>
  </div>
{{/unless}}
