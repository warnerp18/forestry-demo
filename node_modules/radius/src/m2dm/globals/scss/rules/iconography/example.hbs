<h3>Sizing modifiers</h3>
<div class="component-variant col-s-wrapper">
  <div class="icons icon--modifiers">
    {{>globals/scss/rules/iconography/icon id="cross-circle-outline" modifier-class="svg-icon--xsmall"}}
    {{>globals/scss/rules/iconography/icon id="cross-circle-outline" modifier-class="svg-icon--small"}}
    {{>globals/scss/rules/iconography/icon id="cross-circle-outline"}}
    {{>globals/scss/rules/iconography/icon id="cross-circle-outline" modifier-class="svg-icon--large"}}
  </div>
</div>

<h3>Color modifiers</h3>
<div class="component-variant col-s-wrapper">
  <div class="icons icon--modifiers">
    {{>globals/scss/rules/iconography/icon id="cross-circle-outline"}}
    {{>globals/scss/rules/iconography/icon id="cross-circle-outline" modifier-class="svg-icon--accent"}}
    {{>globals/scss/rules/iconography/icon id="cross-circle-outline" modifier-class="svg-icon--disabled"}}
    {{>globals/scss/rules/iconography/icon id="cross-circle-outline" modifier-class="svg-icon--action"}}
    {{>globals/scss/rules/iconography/icon id="cross-circle-outline" modifier-class="svg-icon--inverse"}}
    {{>globals/scss/rules/iconography/icon id="cross-circle-outline" modifier-class="svg-icon--error"}}
    {{>globals/scss/rules/iconography/icon id="cross-circle-outline" modifier-class="svg-icon--success"}}
  </div>
</div>

<h3>Solid icon color modifiers</h3>
<div class="component-variant col-s-wrapper">
  <div class="icons icon--modifiers">
    {{>globals/scss/rules/iconography/icon id="info-circle-solid" modifier-class="svg-icon--solid-neutral"}}
    {{>globals/scss/rules/iconography/icon id="plus-circle-solid" modifier-class="svg-icon--solid-action"}}
    {{>globals/scss/rules/iconography/icon id="minus-circle-solid" modifier-class="svg-icon--solid-action"}}
    {{>globals/scss/rules/iconography/icon id="cross-circle-solid" modifier-class="svg-icon--solid-error"}}
    {{>globals/scss/rules/iconography/icon id="tick-circle-solid" modifier-class="svg-icon--solid-success"}}
  </div>
</div>

<h3>Solid icon with cutout</h3>
<div class="component-variant col-s-wrapper">
  <div class="icons icon--modifiers">
    {{>globals/scss/rules/iconography/icon cutout-eg=true id="info-circle-solid" modifier-class="svg-icon--cutout"}}
    {{>globals/scss/rules/iconography/icon cutout-eg=true id="plus-circle-solid" modifier-class="svg-icon--cutout svg-icon--action"}}
    {{>globals/scss/rules/iconography/icon cutout-eg=true id="minus-circle-solid" modifier-class="svg-icon--cutout svg-icon--action"}}
    {{>globals/scss/rules/iconography/icon cutout-eg=true id="cross-circle-solid" modifier-class="svg-icon--cutout svg-icon--error"}}
    {{>globals/scss/rules/iconography/icon cutout-eg=true id="tick-circle-solid" modifier-class="svg-icon--cutout svg-icon--success"}}
  </div>
</div>

<h3>Icon alignment with accompanying text</h3>
<div class="u-mb-large">
  {{>globals/scss/rules/iconography/icon id="cross" alignment-eg="true" modifier-class="svg-icon--xsmall" font-size-class="font-size-small"}}
  {{>globals/scss/rules/iconography/icon id="cross-circle-outline" alignment-eg="true" modifier-class="svg-icon--small" font-size-class="font-size-small"}}
  {{>globals/scss/rules/iconography/icon id="cross" alignment-eg="true" modifier-class="svg-icon--small"}}
  {{>globals/scss/rules/iconography/icon id="cross-circle-outline" alignment-eg="true" modifier-class=""}}
  {{>globals/scss/rules/iconography/icon id="cross" alignment-eg="true" modifier-class="" font-size-class="font-size-large"}}
  {{>globals/scss/rules/iconography/icon id="cross-circle-outline" alignment-eg="true" modifier-class="svg-icon--large" font-size-class="font-size-large"}}
</div>

{{#if markup}}
  <pre class="content__code-block"><code data-language="html">{{escapePartial (lookup this 'markup')}}</code></pre>
{{/if}}
