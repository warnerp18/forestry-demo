<h3 class="paragraph-heading">Default radios</h3>
<div>
  <label class="control-radio" for="control-radio-1">
    <input class="control-radio__input" id="control-radio-1" type="radio" checked name="default-radios">
    <span class="control-radio__icon"></span>
    Label is optional!
  </label>

  <label class="control-radio" for="control-radio-2">
    <input class="control-radio__input" id="control-radio-2" type="radio" name="default-radios">
    <span class="control-radio__icon"></span>
    Click me!
  </label>
</div>

<hr class="divider u-mb-small"/>

<h3 class="paragraph-heading">Horizontal radios</h3>
<div class="u-horizontal-children">
  <label class="control-radio" for="control-radio-3">
    <input class="control-radio__input" id="control-radio-3" type="radio" name="horizontal-radios">
    <span class="control-radio__icon"></span>
    Yes
  </label>

  <label class="control-radio" for="control-radio-4">
    <input class="control-radio__input" id="control-radio-4" type="radio" name="horizontal-radios">
    <span class="control-radio__icon"></span>
    No
  </label>
</div>

{{#if markup}}
  <pre class="content__code-block"><code data-language="html">{{escapePartial (lookup this 'markup')}}</code></pre>
{{/if}}
