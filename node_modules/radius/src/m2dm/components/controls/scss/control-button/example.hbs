<div class="content__component-example">
  <button class="control-button" type="button">Control</button>

  <span class="component-variant__customisation--inverse">
    <button class="control-button control-button--inverse" type="button">Control</button>
  </span>

  <button class="control-button" disabled type="button">Disabled</button>

  <a class="control-button is-disabled">Disabled</a>

  <button class="control-button" type="button" aria-label="close">
    <svg class="svg-icon svg-icon--small"><use xlink:href="/radius-asset-path/icons/svg-sprite.svg#cross"></use></svg>
    <span>Close</span>
  </button>

  <button class="control-button" type="button" aria-label="play">
    <svg class="svg-icon svg-icon--small"><use xlink:href="/radius-asset-path/icons/svg-sprite.svg#play"></use></svg>
    <span>Close</span>
  </button>

  <button class="control-button control-button--enlarged" type="button" aria-label="play">
    <svg class="svg-icon svg-icon--small"><use xlink:href="/radius-asset-path/icons/svg-sprite.svg#play"></use></svg>
    <span>Close</span>
  </button>

  <button class="control-button control-button--icon-only" type="button" aria-label="edit">
    <svg class="svg-icon svg-icon--small"><use xlink:href="/radius-asset-path/icons/svg-sprite.svg#edit"></use></svg>
  </button>

  <button class="control-button control-button--icon-only control-button--enlarged" type="button" aria-label="edit">
    <svg class="svg-icon svg-icon--small"><use xlink:href="/radius-asset-path/icons/svg-sprite.svg#edit"></use></svg>
  </button>

  <span class="component-variant__customisation--inverse">
    <button class="control-button control-button--icon-only control-button--inverse" type="button" aria-label="edit">
      <svg class="svg-icon svg-icon--small"><use xlink:href="/radius-asset-path/icons/svg-sprite.svg#edit"></use></svg>
    </button>
  </span>

  <button class="control-button control-button--info" type="button" aria-label="help">
    <svg class="svg-icon svg-icon--solid-neutral"><use xlink:href="/radius-asset-path/icons/svg-sprite.svg#info-circle-solid"></use></svg>
    <span>Help!</span>
  </button>

  <button class="control-button control-button--info control-button--processing" type="button" aria-label="processing">
    <svg class="svg-icon svg-icon--disabled"><use xlink:href="/radius-asset-path/icons/svg-sprite.svg#processing"></use></svg>
    <span>Processing</span>
  </button>

  <button class="control-button control-button--success" type="button" aria-label="verified">
    <svg class="svg-icon svg-icon--solid-success"><use xlink:href="/radius-asset-path/icons/svg-sprite.svg#tick-circle-solid"></use></svg>
    <span>Verified</span>
  </button>

  <button class="control-button control-button--error" type="button" aria-label="error">
    <svg class="svg-icon svg-icon--solid-error"><use xlink:href="/radius-asset-path/icons/svg-sprite.svg#cross-circle-solid"></use></svg>
    <span>Error</span>
  </button>
</div>

{{#if markup}}
  <pre class="content__code-block"><code data-language="html">{{escapePartial (lookup this 'markup')}}</code></pre>
{{/if}}
