  <div class="component-variant__grid">
    <section class="trust-block">
      <div class="trust-block__wrapper">
        <div class="trust-block__content">
          <div class="placeholder-component"></div>
        </div>
        <div class="trust-block__media">
          <div class="placeholder-component"></div>
        </div>
      </div>
    </section>
