<label for="{{#if controlId}}{{controlId}}{{else}}labeled-control-id{{/if}}" class="form-label{{#if className}} {{className}}{{/if}}">
  <span>This is a label</span>
  <svg class="svg-icon svg-icon--solid-error form-label__icon-error" aria-hidden="true">
    <use xlink:href="/radius-asset-path/icons/svg-sprite.svg#cross-circle-solid"></use>
  </svg>
  <svg class="svg-icon svg-icon--solid-success form-label__icon-success" aria-hidden="true">
    <use xlink:href="/radius-asset-path/icons/svg-sprite.svg#tick-circle-solid"></use>
  </svg>
</label>
