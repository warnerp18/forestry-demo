<div class="trustpilot trustpilot--{{#if modifier}}{{modifier}}{{/if}}" data-js-trustpilot-api>
    <div class="trustpilot__row">
      <div class="trustpilot__headline-rating">
        <span data-js-trustpilot-headline-rating data-content-4stars="Great" data-content-5stars="Excellent"></span>
      </div>
      <div class="trustpilot__star-group" data-js-trustpilot-stars></div>
    </div>
  {{#if wordy-layout}}
    <p class="trustpilot__reviews-summary">
      The Trustscore for fundingcircle.com is <span data-js-trustpilot-trustscore></span>/10 based on <span data-js-trustpilot-review-count></span> reviews
    </p>
    <a href="{{link}}" target="_blank" rel="noopener">
      <img class="trustpilot__tp-logo" src="/radius-asset-path/trustpilot/tplogo.svg" alt="Trustpilot">
    </a>
  {{else}}
    <div class="trustpilot__row">
      <a href="{{link}}" target="_blank" rel="noopener">
        <img class="trustpilot__tp-logo" src="/radius-asset-path/trustpilot/tplogo{{#if inverse}}-inverse{{/if}}.svg" alt="Trustpilot">
        </a>
        <div class="trustpilot__review-count trustpilot__review-count--with-divider">
          <span data-js-trustpilot-review-count></span> reviews
        </div>
    </div>
  {{/if}}
</div>
