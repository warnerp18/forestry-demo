<div class="modal" id="{{ id }}" data-js-modal aria-hidden="true">
  <div class="modal__overlay" tabindex="-1" data-js-modal-close></div>
  <div class="modal__box" role="dialog" aria-labelledby="dialog-title">
    <div class="modal__header">
      <button data-js-modal-close class="control-button modal__close-button">Close</button>
    </div>
    <div class="modal__content" role="document">
      {{> components/meet-the-team/integration-example/detail id=id name=name role=role }}
    </div>
  </div>
</div>
