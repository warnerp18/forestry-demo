<div class="notice{{#if modifierClass}} {{modifierClass}}{{/if}}">
  <div class="notice__content">
    {{#if supportIcon}}
    <svg class="notice__support-icon svg-icon {{#if iconModifierClass}}svg-icon--cutout{{/if}}">
      <use xlink:href="/radius-asset-path/icons/svg-sprite.svg#{{iconId}}"></use>
    </svg>
    {{/if}}
    <div class="notice__copy">
      {{#if noticeTitle}}
      <h6 class="notice__title">{{noticeTitle}}</h6>
      {{/if}}
      <p>{{copy}}{{#if copyBreak}}<br>{{copy}}{{/if}}</p>
    </div>
  </div>
</div>
