<ul class="sidebar-nav {{#if level}}sidebar-nav--level-{{level}}{{/if}}" data-js-navigation data-js-collapsible-nav-child>
  {{#each this as |item|}}
    {{#if section}}
      <li class="sidebar-nav__item" {{#if item.children}}data-js-collapsible-nav-item{{/if}}>
        <a href="/{{item.section}}">{{item.title}}</a>
        {{#if item.children}}
          <button class="sidebar-nav__toggle" data-js-collapsible-nav-button>
            <svg class="svg-icon svg-icon--action sidebar-nav__plus">
              <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/m2dm-public/assets/icons/svg-sprite.svg#plus-circle-outline"></use>
            </svg>
            <svg class="svg-icon svg-icon--action sidebar-nav__minus">
              <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/m2dm-public/assets/icons/svg-sprite.svg#minus-circle-solid" fill="#fff"></use>
            </svg>
          </button>
        {{/if}}
        {{#if item.children}}
          {{> sidebar item.children level=item.depth}}
        {{/if}}
      </li>
    {{/if}}
  {{/each}}
</ul>
