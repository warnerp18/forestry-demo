{{#if fullPage}}
  {{#> layout bodyClass="integration-page"}}
    {{> (lookup this 'layout') this}}
  {{/layout}}
{{else}}
{{#> layout bodyClass="page-documentation"}}
  <div class="root-wrapper">
    {{> aside}}
    <div class="content">
      <div class="u-page-grid u-pv-3x-large">
        {{#if warningContent}}
        <div class="notice notice--compact notice--attention u-mb-medium">
          <div class="notice__content">
            <div class="notice__copy">
              {{#if warningTitle}}
                <h3 class="notification__title">{{warningTitle}}</h3>
              {{/if}}
              <p class="notification__copy">{{markdown warningContent}}</p>
            </div>
          </div>
        </div>
        {{/if}}

        <section class="text-block text-block--large u-mb-2x-large">
          <h3 class="section-heading section-heading--large text-block__heading-bar--primary">{{title}}</h3>
          <p class="text-block__lead-paragraph">{{purpose}}</p>
        </section>

        {{#if description}}
          <section class="text-block text-block--small u-mb-2x-large">
            <h3 class="section-heading section-heading--small">Description</h3>
            <p class="text-block__paragraph">{{markdown description}}</p>
          </section>
        {{/if}}

        <div class="content__content">
          <h1 class="content__heading"></h1>

          {{#if activateComponent}}
            <section class="content__section content__section--activate u-mb-2x-large">
              <h2 class="content__subheading paragraph-heading paragraph-heading--large">Activate Sass component</h2>

              <p>In order to have the styling of this component available, you need to include it in your project. After including the
                Radius library in your main
                <code class="content__code-inline">./index.scss</code> file, add this snippet:</p>

              <pre class="content__code-block"><code>@include {{activateComponent}};</code></pre>
            </section>
          {{/if}}

          {{#if jsModule}}
            <section class="content__section content__section--activate u-mb-2x-large">
              <h2 class="content__subheading paragraph-heading paragraph-heading--large">Import JS functionality</h2>

              <p>In order to have the JS functionality of this component available, you need to include it in your project. Assuming
                the project is using ES6:</p>

              <pre class="content__code-block"><code>import {{jsModule}} from 'radius/dist/m2dm/js/{{jsModule}}';<code/><br />{{#if jsFunction}}<code>{{jsFunction}}({{jsModuleParameters}});</code>{{else}}<code>{{jsModule}}({{jsModuleParameters}});</code></pre>
              {{/if}}
            </section>
          {{/if}}
          {{#if parameters}}
            <section class="content__section content__section--description">
              <h2 class="content__subheading paragraph-heading paragraph-heading--large">Parameters</h2>
              <pre class="content__code-block"><code>{{parameters}}</code></pre>
            </section>
          {{/if}}
          {{#if sassUsage}}
            <section class="content__section content__section--description">
              <h2 class="content__subheading paragraph-heading paragraph-heading--large">Sass Usage</h2>
              <pre class="content__code-block"><code>{{sassUsage}}</code></pre>
            </section>
          {{/if}}

          <div class="content__section content__section--layout u-mb-2x-large">
            <h2 class="content__subheading paragraph-heading paragraph-heading--large">Usage example</h2>

            {{#if layout}} {{> (lookup this 'layout') this}} {{else}} {{> default-component-layout this}} {{/if}}
          </div>

          {{#if abstractLink}}
            <section class="content__section content__section--activate u-mb-2x-large">
              <h2 class="content__subheading paragraph-heading paragraph-heading--large">Link to Abstract/Sketch file</h2>

              <a href="https://share.goabstract.com/{{abstractLink}}" target="_blank" rel="nofollow" class="cta-link">Download Sketch / Abstract file</a>
            </section>
          {{/if}}

          {{#if children}}
            <div class="content__section content__section--subcategories u-mb-2x-large">
              <h2 class="content__subheading paragraph-heading paragraph-heading--large" id="subcategories">Subcategories</h2>

              <ul class="content__subcategories">
                {{#each children}}
                <li>
                  <a class="cta-link" href="/{{section}}/">{{title}}</a>
                </li>
                {{/each}}
              </ul>
            </div>
          {{/if}}

          {{#if reactDescription}}
            <section class="content__section content__section--description">
              <h2 class="section-heading section-heading--small">React</h2>
              <p class="text-block__paragraph">{{markdown reactDescription}}</p>

              {{#if reactProps}}
                <h3 class="content__subheading paragraph-heading paragraph-heading--large">Props</h3>
                {{markdown reactProps}}
              {{/if}}

              {{#if reactUsage}}
                <h3 class="content__subheading paragraph-heading paragraph-heading--large">Code example</h3>
                <pre class="content__code-block u-mb-medium"><code data-language="html">{{escapePartial (lookup this 'reactUsage')}}</code></pre>
              {{/if}}
            </section>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
{{/layout}}
{{/if}}
