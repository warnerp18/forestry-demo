{{#if markup}}
  <div class="content__component-example">
    {{> (lookup this 'markup') }}
  </div>

  {{#if modifiers}}
    <h3 class="content__component-list-heading">Variations</h3>
    <p>The variations are modifier classes that can be applied on the default element.</p>

    <div class="content__component-variants">
      {{#each modifiers as |description name|}}
        <div class="component-variant">
          <div class="component-variant__heading">
            {{#if name}}
              <h4 class="component-variant__title">{{name}}</h4>
            {{/if}}
            {{#if description}}
              <div class="component-variant__description">{{markdown description}}</div>
            {{/if}}
          </div>

          <div class="component-variant__content u-clearfix">
            {{> (lookup ../this 'markup') modifierClass=name}}
          </div>
        </div>
      {{/each}}
    {{/if}}
  </div>

  <h2 class="content__subheading paragraph-heading paragraph-heading--large">Code example</h2>
  <pre class="content__code-block u-mb-medium"><code data-language="html">{{escapePartial (lookup this 'markup')}}</code></pre>
{{else}}
  <p>No examples available.</p>
{{/if}}
