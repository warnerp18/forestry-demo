{{#breadcrumbs breadcrumbsPath}}
  <nav class="breadcrumb">
    <ol class="breadcrumb__list" role="navigation" aria-label="breadcrumb">
      {{#each this}}
        <li class="breadcrumb__list-item {{#if isCurrent}}breadcrumb__list-item--current{{/if}}">
          {{#if isLink}}
            <a class="breadcrumb__list-link" href="/{{path}}">{{breadcrumbName}}</a>
          {{else}}
            {{breadcrumbName}}
          {{/if}}
        </li>
      {{/each}}
    </ol>
  </nav>
{{/breadcrumbs}}
