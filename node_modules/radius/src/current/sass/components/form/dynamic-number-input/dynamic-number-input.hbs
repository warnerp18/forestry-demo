<div class="dynamic-number-input js-dynamic-number-input"
    data-max-value="1000000"
    data-min-value="5000"
    data-default="50000"
    data-currency="£">
  <label class="dynamic-number-input__focusable">
    <div class="u-visually-hidden">Title</div>
    <input class="dynamic-number-input__input-field js-input" type="tel" maxlength="9">
  </label>
  <button class="dynamic-number-input__submit js-submit" type="submit"></button>
  <div class="dynamic-number-input__error">
    <p class="dynamic-number-input__error-msg">
    The value must be between £5,000 and £1,000,000.
    </p>
  </div>
</div>
