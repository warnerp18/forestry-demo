<div class="table table--horizontal {{modifier_class}}">
  <table class="table__content">
    <thead class="table__head" data-table-hide>
      <tr class="table__row table__row--head">
        <th class="table__cell table__cell--head"></th>
        <th class="table__cell table__cell--head">Col 1</th>
        <th class="table__cell table__cell--head">Col 2</th>
        <th class="table__cell table__cell--head">Col 3</th>
        <th class="table__cell table__cell--head">Col 4</th>
      </tr>
    </thead>
    <tbody class="table__body">
      <tr class="table__row">
        <td class="table__cell" data-td-title>Row 1</td>
        <td class="table__cell" data-td-label="Col 1">Value 1/1</td>
        <td class="table__cell" data-td-label="Col 2">Value 1/2</td>
        <td class="table__cell" data-td-label="Col 3">Value 1/3</td>
        <td class="table__cell" data-td-label="Col 4">Value 1/4</td>
      </tr>

      <tr class="table__row">
        <td class="table__cell" data-td-title>Row 2</td>
        <td class="table__cell" data-td-label="Col 1">Value 2/1</td>
        <td class="table__cell" data-td-label="Col 2">Value 2/2</td>
        <td class="table__cell" data-td-label="Col 3">Value 2/3</td>
        <td class="table__cell" data-td-label="Col 4">Value 2/4</td>
      </tr>
    </tbody>
  </table>
</div>
