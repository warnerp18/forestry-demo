<div class="content__component-variants">
  {{#if usage}}
    {{#each usage as |label class|}}
      <pre class="content__code-block"><code data-language="html">&lt;button type="button" class="{{class}}"&gt;Click me!&lt;/button&gt;
&lt;input type="button" class="{{class}}" value="Click me!"&gt;
&lt;a href="#" class="{{class}}"&gt;Click me!&lt;/a&gt;</code></pre>
      <div class="content__component-example">
        <a href="#" class="btn btn--primary">Click me!</a>
        <a href="#" class="btn btn--secondary">Click me!</a>
        <span class="component-variant__customisation--contrast">
          <a href="#" class="btn btn--secondary-alt">Click me!</a>
        </span>
        <a href="#" class="btn btn--primary fci-search">Click me!</a>
        <a href="#" class="btn btn--primary" disabled >Click me!</a>
      </div>
    {{/each}}
  {{/if}}

  {{#if sizes}}
    {{#each sizes as |label class|}}
      <div class="component-variant">
        <div class="component-variant__heading">
          <h4 class="component-variant__title">{{class}}</h4>
        </div>

        <div class="component-variant__content">
          <button type="button" class="btn btn--primary {{class}}">{{label}} primary</button>
          <a href="#" class="btn btn--secondary {{class}}">{{label}} secondary</a>
        </div>

        <pre class="content__code-block"><code>&lt;button type="button" class="btn {{class}}"&gt;{{label}} secondary&lt;/button&gt;</code></pre>
      </div>
    {{/each}}
  {{/if}}

  {{#if importance}}
    {{#each importance as |label class|}}
      <div class="component-variant">
        <div class="component-variant__heading">
          <h4 class="component-variant__title">{{class}}</h4>
          <div class="component-variant__description">{{label}}</div>
        </div>

        <div class="component-variant__content component-variant__customisation--{{class}}">
          <button type="button" class="btn {{class}}">Click me!</button>
        </div>

        <pre class="content__code-block"><code>&lt;button type="button" class="btn {{class}}"&gt;Click me!&lt;/button&gt;</code></pre>
      </div>
    {{/each}}
  {{/if}}

  {{#if variations}}
    {{#each variations as |label class|}}
      <div class="component-variant">
        <div class="component-variant__heading">
          <h4 class="component-variant__title">{{class}}</h4>
          <div class="component-variant__description">{{label}}</div>
        </div>

        <div class="component-variant__content component-variant__customisation--{{class}}">
          <button type="button" class="btn btn--primary {{class}}">Click me!</button>
          <button type="button" class="btn btn--secondary {{class}}">Click me!</button>
          <span class="component-variant__customisation--contrast">
            <button type="button" class="btn btn--secondary-alt {{class}}">Click me!</button>
          </span>
        </div>

        <pre class="content__code-block"><code>&lt;button type="button" class="btn {{class}}"&gt;Click me!&lt;/button&gt;</code></pre>
      </div>
    {{/each}}
  {{/if}}
</div>
