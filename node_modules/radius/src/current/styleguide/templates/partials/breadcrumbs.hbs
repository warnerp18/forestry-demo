{{#breadcrumbs breadcrumbsPath}}
  <nav class="breadcrumbs">
    {{#each this}}
      {{#if @last}}
        <span class="breadcrumbs__item breadcrumbs__item--last">{{label}}</span>
      {{else}}
        <a href="{{url}}" class="breadcrumbs__item">{{label}}</a>
        <span class="breadcrumbs__separator"></span>
      {{/if}}
    {{/each}}
  </nav>
{{/breadcrumbs}}
