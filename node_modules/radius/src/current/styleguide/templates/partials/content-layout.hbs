{{#> layout bodyClass="page-documentation"}}
  {{> aside}}

  <div class="content">
    {{> breadcrumbs breadcrumbsPath=section}}

    <div class="content__content">
      <h1 class="content__heading">{{title}}</h1>

      {{#if activateComponent}}
        <section class="content__section content__section--activate">
          <h2 class="content__subheading">Activate Sass component</h2>

          <p>In order to have the styling of this component available, you need to include it in your project. After including the Radius library in your main <code class="content__code-inline">./index.scss</code> file, add this snippet:</p>

          <pre class="content__code-block"><code>@include {{activateComponent}};</code></pre>
        </section>
      {{/if}}

      {{#if description}}
        <section class="content__section content__section--description">
          <h2 class="content__subheading">Description</h2>
          {{{markdown description}}}
        </section>
      {{/if}}

        <div class="content__section content__section--layout">
          <h2 class="content__subheading">Usage example</h2>

          {{#if layout}}
            {{> (lookup this 'layout') this}}
          {{else}}
            {{> default-component-layout this}}
          {{/if}}
        </div>

      {{#if children}}
        <div class="content__section content__section--subcategories">
          <h2 class="content__subheading">Subcategories</h2>

          <ul class="content__subcategories">
            {{#each children}}
              <li>
                <a href="/{{section}}/">{{title}}</a>
              </li>
            {{/each}}
          </ul>
        </div>
      {{/if}}
    </div>

    {{> footer}}
  </div>
{{/layout}}
